{
  "openapi": "3.0.3",
  "info": {
    "title": "PawPalace API",
    "version": "1.0.0",
    "description": "API for PawPalace pet stay-care platform"
  },
  "servers" : [
    {
      "url" : "http://localhost:1160/api/pawpalace"
    }
  ],
  "paths": {
    "/pet": {
      "post": {
        "summary": "Create a new pet",
        "operationId": "CreatePet",
        "tags": ["Pet"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "./Pet.json#/components/schemas/Pet"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Pet created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "./Pet.json#/components/schemas/Pet"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input"
          }
        }
      }
    },
    "/pet/{id}": {
      "get": {
        "summary": "Fetch pet by ID",
        "operationId": "GetPetById",
        "tags": ["Pet"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "description": "Unique ID of the pet"
          }
        ],
        "responses": {
          "200": {
            "description": "Pet fetched successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "./Pet.json#/components/schemas/Pet"
                }
              }
            }
          },
          "404": {
            "description": "Pet not found"
          }
        }
      }
    }
  }
}
