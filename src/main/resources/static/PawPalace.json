{
  "openapi": "3.0.3",
  "info": {
    "title": "PawPalace API",
    "version": "1.0.0",
    "description": "API for PawPalace pet stay-care platform"
  },
  "servers" : [
    {
      "url" : "http://localhost:1160/api/pawpalace"
    }
  ],
  "paths": {
    "/pet": {
      "post": {
        "summary": "Create a new pet",
        "operationId": "CreatePet",
        "tags": ["Pet"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Pet"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Pet created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Pet"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Pet": {
        "type": "object",
        "required": ["name", "type", "species"],
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64",
            "readOnly": true,
            "description": "Unique identifier for the pet"
          },
          "name": {
            "type": "string",
            "description": "Pet's name",
            "example": "Buddy"
          },
          "type": {
            "type": "string",
            "description": "Classification of pet by environment",
            "enum": ["AQUATIC", "TERRESTRIAL", "AERIAL"],
            "example": "TERRESTRIAL"
          },
          "species": {
            "type": "string",
            "description": "Species of the pet",
            "enum": ["DOG", "CAT", "FISH"],
            "example": "DOG"
          },
          "subSpecies": {
            "type": "string",
            "description": "Subspecies classification of the pet",
            "enum": ["DOG", "CAT", "FISH"],
            "example": "CAT"
          },
          "breed": {
            "type": "string",
            "description": "Breed of the pet",
            "example": "Golden Retriever"
          },
          "age": {
            "type": "integer",
            "format": "int32",
            "description": "Age of the pet in years",
            "example": 3
          }
        }
      }
    }
  }
}
